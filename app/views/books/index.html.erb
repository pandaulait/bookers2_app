<h1>index</h1>
<% if @newbook.errors.any? %>
  <%= @newbook.errors.count %>件のエラーが発生しました
  <% @newbook.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-lg-3" >
      <%= render 'books/user', user: @user,newbook: @newbook %>
    </div>

    <div class = "col-lg-8 offset-md-1">
      <table class="table table-striped">
        <thead>
          <tr></tr>
          <tr>
            <th></th>
            <th>Title</th>
            <th>opinion</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, size:"60x60", fallback: "no_image.jpg" %></td>
            <td><%=link_to book.title,book_path(book.id) %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>







