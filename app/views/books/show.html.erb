<main>
  <% if @newbook.errors.any? %>
    <%= @newbook.errors.count %>件のエラーが発生しました
    <% @newbook.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>
  <div class="container">
    <div class="row">
      <div class="col-md-3" >
        <%= render 'books/user', user: @book.user,newbook: @newbook %>
      </div>
      <div class="post-body col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table table-striped">
          <thead>
            <tr></tr>
            <tr>
              <th></th>
              <th>Title</th>
              <th>opinion</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user.id) do %>
                  <%= attachment_image_tag @book.user, :profile_image, size:"60x60", fallback: "no_image.jpg" %>
                  <%= @book.user.name%>
                <% end %>
              </td>
              <td><%= @book.title %></td>
              <td><%= @book.body %></td>
              <td>
                <% if @book.user.id==current_user.id%>
                  <%= link_to "Edit", edit_book_path(@book) ,class: "btn btn-secondary"%>
                <%else%>
                  <% if @book.favorited_by?(current_user) %>
                  <p>
                    <%= link_to book_favorites_path(@book), method: :delete do %>
                      ♥<%= @book.favorites.count %>
                    <% end %>
                  </p>
                  <% else %>
                  <p>
                    <%= link_to book_favorites_path(@book), method: :post do %>
                      ♡<%= @book.favorites.count %>
                    <% end %>
                  </p>
                  <% end %>
                <%end%>
              </td>
              <td>
                <% if @book.user.id==current_user.id%>
                  <%= link_to "Destroy", book_path(@book.id), method: :delete,class: "btn btn-secondary", "data-confirm" => "本当に削除しますか？" %>
                <%end%>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="comments">
          <h3>comment</h3>
          <p>コメント件数:<%=@book.post_comments.count%>
          <span class="m-3">
            <% if @book.user.id==current_user.id%>
              <% if @book.favorited_by?(current_user) %>
                <%= link_to book_favorites_path(@book),class:"text-danger", method: :delete do %>
                  ♥<%= @book.favorites.count %>
                <% end %>
              <% else %>
                <%= link_to book_favorites_path(@book), method: :post do %>
                  ♡<%= @book.favorites.count %>
                <% end %>
              <% end %>
            <% end %>
          </span>
          </p>

          <% @book.post_comments.each do |post_comment|%>
            <div class="m-1">
              <%= attachment_image_tag post_comment.user, :profile_image, size:"60x60", fallback: "no_image.jpg" %>
              <%= post_comment.comment %>
              <% if post_comment.user == current_user %>
                <span class="comment-delete float-right">
                <%= link_to "削除", book_post_comment_path(post_comment.book, post_comment),class: "btn btn-secondary", method: :delete %>
                <%= post_comment.created_at.strftime('%Y/%m/%d') %>
                </span>

              <%end%>
            </div>
          <%end%>
        </div>
        <div class="new-comment">
          <%= form_with(model:[@book, @post_comment], local: true) do |f| %>
            <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに",class: "form-control" %>
            <%= f.submit "送信",class:"my-1" %>
          <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>
</main>

