
<div class="container">
  <div class="row">
    <div class="col-md-3" >
      <%= render 'books/user', user: @user,newbook:@newbook %>
    </div>
    <div class="col-md-8 offset-md-1" >
      <h2></h2>
      <table class="table table-striped">
        <thead>
          <tr></tr>
          <tr>
            <th></th>
            <th>Title</th>
            <th>opinion</th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, size:"60x60", fallback: "no_image.jpg" %></td>
            <td><%= user.name%></td>
            <td><%= link_to 'show',user_path(user.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>





