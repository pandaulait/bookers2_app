

<div class="container">
  <div class="row">
    <div class="col-md-3" >
      <%= render 'books/user', user: @user,newbook:@newbook %>
    </div>
    <div class="col-md-8 offset-md-1" >
      <h2>Books</h2>
      <table class="table table-striped">
        <thead>
          <tr></tr>
          <tr>
            <th></th>
            <th>Title</th>
            <th>opinion</th>
          </tr>
        </thead>
        <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag book.user, :profile_image, size:"60x60", fallback: "no_image.jpg" %></td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>






