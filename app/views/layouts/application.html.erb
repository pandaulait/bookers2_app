<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.1/css/all.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-1" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class = "collapse navbar-collapse" id = "navbarNavDropdown">
            <ul class ="navbar-nav ml-auto navbar-brand">
              <% if user_signed_in? %>
              <li class="nav-item nav-link">
                <i class="fas fa-home "></i>
                <%= link_to 'Home', user_path(current_user.id) ,class:"text-light" %>
              </li>
              <li class="nav-item nav-link">
                <i class="fas fa-users"></i>
                <%= link_to "Users", users_path ,class:"text-light"%>
              </li>
              <li class="nav-item nav-link">
                <i class="fas fa-book-open"></i>
                <%= link_to "Books", books_path ,class:"text-light"%>
              </li>
              <li class="nav-item nav-link">
                <i class="fas fa-sign-out-alt"></i>
                <%= link_to "logout", destroy_user_session_path, method: :delete,class:"text-light" %>
              </li class="nav-item nav-link">
              <% else %>
              <li class="nav-item nav-link">
                <i class="fas fa-home"></i>
                <%= link_to "Home", root_path,class:"text-light" %>
              </li>
              <li class="nav-item nav-link">
                <i class="fas fa-link"></i>
                <%= link_to "About", home_about_path ,class:"text-light"%>
              </li>
               <li class="nav-item nav-link">
                 <i class="fas fa-user-plus"></i>
                <%= link_to "sign up", new_user_registration_path ,class:"text-light"%>
              </li>
              <li class="nav-item nav-link">
                <i class="fas fa-sign-in-alt"></i>
                <%= link_to "login", new_user_session_path ,class:"text-light"%>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>


    <%= render 'layouts/notifications' %>
    <div class="container">
      <span class="text-right">
        <% if user_signed_in? %>
          <%= render 'layouts/find' %>
        <%end%>
      </span>
    </div>







    <%= yield %>
    <footer>
      <div class="container mt-5">
      	<div class="row">
        	<div class="mx-auto">
        		<p>CopyRight Infratop.inc</p>
        	</div>
        </div>
      </div>
    </footer>
  </body>

</html>
